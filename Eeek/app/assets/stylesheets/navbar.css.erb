/*------------------------------small---------------------------------*/


@media (min-width: 320px) and (max-width: 720px) {

  nav {
    background-color: #161616;
    color: #fff;
    padding-bottom: .2px; 
    width: 100%;
    z-index: 4;
    height: 3em;
  }

  nav ul {
    z-index: 5;
    position: absolute;
    background-color: #161616;
    list-style-type: none;
    padding: 10px;
    width: 100%;
  }

  nav ul li {
    display: none;
    margin: 0 7% 0 7%;
    padding: 4% 3% 4% 0;
    border-bottom: 1px gray solid;
  }

  nav .menu_icon {
    height: 2em;
    width: 2em;
    margin: auto;
    background-image: url(<%= asset_path 'menu-icon.png' %>);
    background-repeat: no-repeat;
    background-size: 100%;
  }
  
  nav a {
    text-decoration: none;
    color: #fff;
    font-size: 18px;
    font-family: 'Bree Serif';
    text-shadow: #000 0px 1px 5px;
  }

  nav a:hover {
    text-decoration: underline;
    background-color: gray;
  }

  .logo {
    height: 75px;
    width: 75px;
  }

  .container {
    background-color: white;
    width: 30%;
    text-align: center;
    border: 2px solid black;
    border-radius: 15px;
    margin-left: 69%;
    margin-right: 31%;
    margin-bottom: 50%;
    -webkit-box-shadow: -1px 6px 4px 5px rgba(0,0,0,0.75);
    -moz-box-shadow: -1px 6px 4px 5px rgba(0,0,0,0.75);
    box-shadow: -1px 6px 4px 5px rgba(0,0,0,0.75);
    font-family: verdana;
  }

}



