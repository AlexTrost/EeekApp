@import url(http://fonts.googleapis.com/css?family=Bree+Serif);
@import url(http://fonts.googleapis.com/css?family=Yanone+Kaffeesatz);

body {
	margin: 0;
	padding: 0;
	height: 100%;
}

/*------------------------------small---------------------------------*/


@media (min-width: 320px) and (max-width: 720px) {
  
  .outermost {
		margin: 0;
		padding: 0;
		width: 100%;
		height: 100%;
	}

	.bd-sm {
		border: 2px black solid;
	}

	.login_page {
		margin: 1% 15% 0 15%;
		width: auto;
		text-align: center;

	}

	.login_page .eeek_title {
		font-size: 80px;
		font-family: 'Bree Serif';
		margin-top: -1px;
	}

	.login_div {
		margin: 8% auto;
		width: 80%;
		text-align: center;
	}

	.signup_div {
		margin: 6% auto;
		width: 80%;
		text-align: center;
		background-color: white;
		position: relative;
	}

	.signup_form {
		display: none;
	}

	#signup_form_display_button {
		border: 2px black solid;
		border-radius: 15%;
		font-family: 'Bree Serif';
		font-size: 16px;
		width: 6em;
		height: 3em;
	}

	#signup_form_display_button:hover {
		border: 4px #336699 solid;
	}


	.login_page input {
		width: 100%;
		height: 2.5em;
		vertical-align: center;
		margin-top: .4em;
		border-radius: 4px;
		border: 3px black ridge;
		text-align: center;
		font-size: 20px;
		padding: none;
		font-family: bold;
	}

	.login_page input:hover {
		border: 4px #336699 solid;
	}

	.outermost .clouds {
	  position: absolute;
	  background-image: url(/assets/cloud_icon.png);
	  background-repeat: no-repeat;
	  background-size: 100%;
	  height: 14%;
	  width: 14%;
	}

	.outermost .cloud_1 {
	  left: 75%;
	  top: 3em;
	}

	.outermost .cloud_2 {
	  top: 21em;
	  left: 79%;
	}

	.outermost .cloud_3 {
	  left: 12%;
	  top: 50em;
	}

	.outermost .cloud_4 {
	  left: 3%;
	  top: 2em;
	}

	.outermost .cloud_5 {
	  left: 3%;
	  top: 23em;
	}

	.outermost .cloud_6 {
	  left: 60%;
	  top: 40em;
	}
}


