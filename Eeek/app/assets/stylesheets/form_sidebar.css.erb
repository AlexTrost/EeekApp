.form body, div, dl, dt, dd, ul, ol, li, h1, h2, h3, h4, h5, h6, 
pre, form, fieldset, input, textarea, p, blockquote, th, td { 
  padding:0;
  margin:0;}


.form h1 {
	margin: 23% 1.5% 0 1.5%;
	text-align: center;
	font-size: 22px;
}


#new_upload_form {
  display: none;
	margin: 14% 0 0 0;  
  width: auto;
}

#new_upload_form .uploader {
	margin: 1% 0 0 3%;
	font-size: 11px;
	padding: 1px;
}


#new_upload_form .upload_submit {
	width: 50%;
	height: 2em;
	vertical-align: center;
	margin: .4em 0 0 25%;
	border-radius: 4px;
	border: 2px black ridge;
	text-align: center;
	font-size: 15px;
	padding: none;
	font-family: bold;
}

#new_upload_form .upload_submit:hover {
	border: 2px #336699 solid;
}

#new_text_form {
  display: none;
}

#new_text_form input {
	width: 50%;
	height: 1.5em;
	vertical-align: center;
	margin: .3em 0 0 25%;
	border-radius: 4px;
	border: 2px black ridge;
	text-align: center;
	font-size: 15px;
	padding: none;
	font-family: bold;
}

#new_text_form input:hover {
	border: 2px #336699 solid;
}

textarea {
  width: 90%;
	height: 11em;
	vertical-align: center;
	margin: .3em 2% 0 2%;
	border-radius: 4px;
	border: 3px black ridge;
	font-size: 15px;
	font-family: bold;
	padding: 2%;
}

#checkbox_list {
  list-style-type: none;
  height: 2.5em;
	margin: 0% ;
	text-align: center;
	display: table;
	width: 100%;
}

#checkbox_list .checkbox{
  display: table-cell;
  vertical-align: middle;
	height: 100%;
	width: 48%;
	font-family: "Bree Serif";
	font-size: 15px;
}

#checkbox_list #text_checkbox {
	border-right: 2px black solid;
}

#checkbox_list #upload_checkbox {
	border-left: 2px black solid;
}