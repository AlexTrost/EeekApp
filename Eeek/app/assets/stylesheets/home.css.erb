

  .home_container .welcome_circle {
		height: 260px;
		width: 260px;
		opacity: .9;
		margin: 12% auto;
		border-radius:50%;
		font-size:15px;
		color:#fff;
		line-height:260px;
		text-align:center;
		background:#000;
		font-family: 'Bree Serif';
}

	.home_container .welcome_circle:hover {
		-ms-transform: rotate(360deg); /* IE 9 */
    -webkit-transform: rotate(360deg); /* Chrome, Safari, Opera */
    transform: rotate(360deg);
    transition: .9s;
		background: #FFCC00;

	}

	.hidden_circle_message {
		display: none;
		color: black;
	}

	.home_container .welcome_circle:hover .circle_message {
		display: none;
	}

	.home_container .welcome_circle:hover .hidden_circle_message {
		display: block;
    transition: .5s;
	}


	.home_container {
		top: 2.5em;
		background-image: url(<%= asset_path 'eeek_backgrounds/2.jpg' %>);
		background-repeat: no-repeat;
		background-size: 100%;
		background-position: bottom;
		height: 100%;
		width: 100%;
		position: absolute;
	}

/*------------------------------small---------------------------------*/


@media (min-width: 320px) and (max-width: 720px) {
   
   .home_container {
		top: 2.5em;
	} 

	.home_container .welcome_circle {
		height: 200px;
		width: 200px;
		opacity: .9;
		margin: 12% auto;
		border-radius:50%;
		font-size:11px;
		color:#fff;
		line-height:200px;
		text-align:center;
		background:#000;
		font-family: 'Bree Serif';
}

}
