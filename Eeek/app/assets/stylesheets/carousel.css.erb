
/*------------------------------small---------------------------------*/


@media (min-width: 320px) and (max-width: 720px) {

  .carousel_div {
    width: 100%;
    height: 50%;
    padding-top: 2.5em;
  }

  .carousel_div #upload_carousel {
    height: 10%;
  }

  .carousel_div #upload_carousel .upload_div {
    border: 4px black solid;
    background-color: white;
    width: 95%;
    height: 30em;
    margin: 5em auto;
    display: table;
  }

  .owl-carousel {
    display: inline-block; }


  #upload_carousel img {
    max-width: 95%;
    max-height: 34em;
    display: table-cell;
    vertical-align: middle;
    padding-top: 3em;
    margin-left: auto;
    margin-right: auto;
  }

  #upload_carousel p {
    text-align: center;
    height: auto;
    display: table-cell;
    vertical-align: middle;
    margin-left: auto;
    margin-right: auto;
    padding: 3%;
  }

  .carousel_div .cloud {
    position: absolute;
    background-image: url(<%= asset_path 'cloud_icon.png' %>);
    background-repeat: no-repeat;
    background-size: 100%;
    height: 17em;
    width: 17%;
  }

  .carousel_div .cloud1 {
    left: 38em;
    top: 2em;
  }

  .carousel_div .cloud2 {
    top: 36em;
    left: 18em;
  }

  .carousel_div .cloud3 {
    left: 3em;
    top: 33em;
  }

  .carousel_div .cloud5 {
    left: 12em;
    top: 42em;
  }

}

