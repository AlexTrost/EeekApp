.footer {
	/*border: 3px orange solid;*/
	width: 100%;
	margin-bottom: 0;
	text-align: center;
	font-family: 'Bree Serif';
	background-color: #161616;
	padding: 1em 0 2em 0;
}

.footer h1 {
}

.footer_header {
	/*border: 3px red solid;*/
	color: #fff;
  text-shadow:#000 0px 1px 5px;

	font-size: 38px;
	margin: 2% 0 2% 0;
}

.footer_nav {
	margin: 2% 0 3% 0;
	color: #98B2CB;
	/*border: 3px green solid;*/
}

.footer_ul {
	list-style-type: none;
}

.footer_ul li {
	display: inline;
	margin: 0 2% 0 2%;
}

.footer_ul li a {
	text-decoration: none;
	color: #98B2CB;
}

.footer_slash {
	color: gray;
}

.footer_signature {
	/*border: 3px blue solid;*/
	font-size: 12px;
	color: #fff;
  text-shadow:#000 0px 1px 5px;
}

.secret_footer_div {
	height: 21px;
}

.secret_about_message {
	display: none;
	color: gray;
  text-shadow:#000 0px 1px 5px;
}

.secret_terms_message {
	display: none;
	color: gray;
  text-shadow:#000 0px 1px 5px;
}


.secret_privacy_message {
	display: none;
	color: gray;
  text-shadow:#000 0px 1px 5px;
}

.secret_contact_message {
	display: none;
	color: gray;
  text-shadow:#000 0px 1px 5px;
}

@media (min-width: 320px) and (max-width: 720px) {
	.footer_ul li {
		font-size: 12px;
		margin: 0 1% 0 1%;
	}

	.secret_footer_div {
		height: 30px;
		font-size: 12px;
	}
}