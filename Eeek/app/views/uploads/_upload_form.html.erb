<div id="side_bar">  
  <div class="form new_upload_form_div">
    <h1>Upload Something That Makes You Happy</h1>
    <hr>

    <ul id="checkbox_list">
      <li id="text_checkbox" class="checkbox">Text Entry </li>
      <li id="upload_checkbox" class="checkbox">Photo Entry </li>
    </ul>


    <hr>
    <%= form_for :upload, :url => uploads_path, :method => :post, html: { multipart: true, id: "new_text_form" }, remote: true do |f| %>
      <%= f.text_area :text, :rows => "15", :placeholder => "A quote, a memory, a reminder. You're call."%>
      <hr>
      <%= f.submit "Save", class: "btn btn-primary button" %>
    <% end %>

    <%= form_for :upload, :url => uploads_path, :method => :post, html: { multipart: true, id: "new_upload_form" }, remote: true do |f| %>
      <%= f.file_field :attachment, class: "uploader" %>
      <hr>
      <%= f.submit "Save", class: "upload_submit" %>
    <% end %> 
  </div>
</div>
