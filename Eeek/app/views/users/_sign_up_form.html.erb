<%= form_for :user, url: users_path, method: :post, remote: true do |f| %>
	<%= f.text_field :email, :placeholder => "Email" %>
	<%= f.text_field :first_name, :placeholder => "What's your first name?" %>
	<%= f.password_field :password, :placeholder => "Password, shhh" %>
	<%= f.submit %>
<% end %>        